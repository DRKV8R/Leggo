{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Psychic Guacamole Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000"
            },
            "restart": true,
            "runtimeArgs": ["--nolazy"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Psychic Guacamole Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000"
            },
            "restart": true,
            "runtimeArgs": ["--inspect"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}